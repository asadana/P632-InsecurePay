<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cigital.insecurepay.fragments.HomeFragment">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHome_accountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvHome_accountNumber"
                android:textSize="@dimen/abc_text_size_title_material" />

            <TextView
                android:id="@+id/tvHome_fillAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHome_accountBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvHome_accountBalance"
                android:textSize="@dimen/abc_text_size_title_material" />

            <TextView
                android:id="@+id/tvHome_fillBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</LinearLayout>
